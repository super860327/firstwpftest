<TableRow x:Class="IDKin.IM.Windows.Comps.MessageCenter.MsgRecordItem" Background="#FFD3D3D3" FontSize="{Binding Window.FontSize}" FontFamily="{Binding Window.FontFamily}" MouseEnter="TableRow_MouseEnter" MouseLeave="TableRow_MouseLeave" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <TableCell>
    <BlockUIContainer>
      <Image Name="imgHead" Width="40" Height="40" />
    </BlockUIContainer>
  </TableCell>
  <TableCell>
    <BlockUIContainer>
      <FlowDocumentScrollViewer Name="MessageContent" VerticalScrollBarVisibility="Disabled" FocusVisualStyle="{x:Null}">
        <FlowDocument PagePadding="0" FocusVisualStyle="{x:Null}" />
      </FlowDocumentScrollViewer>
    </BlockUIContainer>
  </TableCell>
  <TableCell>
    <BlockUIContainer>
      <StackPanel Orientation="Vertical">
        <Image Name="imgIsMarked" Width="16" Height="16" Margin="3" Opacity="1" Cursor="Hand" MouseLeftButtonDown="IsMarkedHandler" />
      </StackPanel>
    </BlockUIContainer>
  </TableCell>
</TableRow>