<Border x:Class="IDKin.IM.Windows.Comps.TabItemHeaderControl" Name="HeaderBorder" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Name="imgIcon" Grid.Column="0" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <TextBlock Name="tbkTitle" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" TextTrimming="WordEllipsis" MaxWidth="100" />
    </Grid>
</Border>