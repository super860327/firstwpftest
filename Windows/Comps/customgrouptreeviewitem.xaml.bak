<TreeViewItem x:Class="IDKin.IM.Windows.Comps.CustomGroupTreeViewItem" 
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <TreeViewItem.Header>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="22">
      <TextBlock Name="tBlock" Background="#00FFFFFF" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Path=Text, ElementName=tb}" />
      <TextBox Name="tb" Text="新建分组" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
    </Grid>
  </TreeViewItem.Header>
</TreeViewItem>