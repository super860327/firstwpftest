<Popup x:Class="IDKin.IM.Windows.Comps.SendStylePopup" AllowsTransparency="True" PopupAnimation="Fade" FocusVisualStyle="{x:Null}" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Background="#FFDAF6FF" BorderThickness="1" CornerRadius="5" Margin="15">
    <Border.BorderBrush>
      <SolidColorBrush Color="#56d5ff" Opacity="0.5" />
    </Border.BorderBrush>
    <Border.Effect>
      <DropShadowEffect ShadowDepth="1" Opacity="0.5" />
    </Border.Effect>
    <Menu Name="sendTypeMenu" Background="#00FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center">
      <MenuItem Name="enterMenu" Header="按Enter键发送" Click="enterMenu_Click" />
      <MenuItem Name="ctrlMenu" Header="按Ctrl+Enter键发送" Click="ctrlMenu_Click" />
    </Menu>
  </Border>
</Popup>